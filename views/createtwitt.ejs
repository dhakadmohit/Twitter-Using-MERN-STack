<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Create Post</title>
  <link rel="stylesheet" href="../stylesheets/style.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: "Segoe UI", sans-serif;
      background-color: #f0f2f5;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
    }

    .post-container {
      background: #fff;
      padding: 2rem;
      border-radius: 16px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
      width: 90%;
      max-width: 600px;
      animation: fadeIn 0.6s ease-in-out;
    }

    .post-container h2 {
      margin-bottom: 1rem;
      text-align: center;
      color: #1da1f2;
    }

    textarea {
      width: 100%;
      height: 120px;
      padding: 1rem;
      border: 1px solid #ccc;
      border-radius: 12px;
      resize: none;
      font-size: 1rem;
      outline: none;
      transition: border 0.3s ease;
    }

    textarea:focus {
      border-color: #1da1f2;
    }

    .post-btn {
      margin-top: 1rem;
      width: 100%;
      padding: 0.8rem;
      font-size: 1rem;
      border: none;
      border-radius: 12px;
      background-color: #1da1f2;
      color: white;
      cursor: pointer;
      transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .post-btn:hover {
      background-color: #0d8ddb;
      transform: scale(1.03);
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(40px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @media (max-width: 500px) {
      .post-container {
        padding: 1.2rem;
      }

      textarea {
        height: 100px;
      }
    }
  </style>
</head>
<body>
  <div class="post-container">
    <h2>Create a Tweet</h2>
    <form action="/twitts/create-post" method="POST">
      <textarea id="tweet-content" name="content" placeholder="What's happening?" required></textarea>
      <div style="display: flex; gap: 10px; margin-top: 10px;">
        <button type="submit" class="post-btn">Tweet</button>
        <button class="post-btn" type="button" onclick="generateWithGemini()">âœ¨ Write with Gemini</button>
      </div>
    </form>
  </div>

  <script>
    async function generateWithGemini() {
     
      const textarea = document.getElementById('tweet-content');
      console.log(textarea);
      
      
      try {
        const res = await fetch('/twitts/generate-gemini', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ prompt: "Write a short, catchy tweet about technology or trending news." })
        });

        console.log(res);
        
  
        const data = await res.json();
        // console.log("me chal rha hu\n")
        textarea.value = data.generatedTweet || "Couldn't generate tweet.";
      } catch (err) {
        console.error(err);
        textarea.value = "Error generating tweet.";
      }
    }
  </script>
</body>
</html>
